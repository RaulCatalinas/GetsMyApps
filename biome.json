{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": ["node_modules"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off"
			}
		},
		"ignore": ["node_modules"]
	},
	"formatter": {
		"enabled": true,
		"ignore": ["node_modules"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"trailingComma": "none"
		}
	}
}
