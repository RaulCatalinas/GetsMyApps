---
type Props = {
  href: string;
  text: string;
};

const { href, text } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-block bg-blue-500 hover:bg-blue-600 hover:scale-105 hover:active:scale-90 text-white font-bold py-2 px-4 rounded"
>
  {text}
</a>
