---
// types
import type { Language } from '@/types/language'

// i18n
import { getJson } from '@/i18n/utils'

// Components
import ModalButton from '../buttons/ModalButton'

// Layouts
import ModalLayout from '@/layouts/ModalLayout.astro'

interface Props {
  language: Language
}

const { language } = Astro.props

const { modal } = getJson(language)
---

<ModalLayout {language}>
  <h3 class="text-black text-lg text-center text-pretty font-semibold">
    {modal.text}
  </h3>
  <div class="flex flex-col items-center justify-center mt-4 gap-3">
    <ModalButton type="affirmative" id="yes-btn" {language} client:load />
    <ModalButton type="negative" id="no-btn" {language} client:load />
  </div>
</ModalLayout>
