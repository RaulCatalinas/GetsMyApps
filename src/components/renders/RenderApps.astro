---
// Components
import LinkAsButton from "../links/LinkAsButton.astro";

// Types
import type { AppWithLogo } from "@/types/supabase";

interface Props {
  apps: AppWithLogo[];
}

const { apps } = Astro.props;
---

<div
  class="grid grid-cols-2 place-content-center max-sm:grid-cols-1 gap-4 mt-4"
>
  {
    apps.map((app) => {
      const { name, description, githubRepoURL, logoURL, alternativeText } =
        app;

      return (
        <div class="bg-white rounded-lg shadow-md mt-4 p-4 w-max">
          <h1 class="text-xl font-semibold text-center text-balance">{name}</h1>
          <p class="text-gray-700 text-center text-pretty">{description}</p>
          <img
            src={logoURL}
            alt={alternativeText}
            class="mx-auto mt-3 flex items-center justify-center"
            width="125"
            height="125"
          />
          <div class="flex items-center justify-center mt-4 gap-2">
            <LinkAsButton
              href={githubRepoURL}
              text="View source code on GitHub"
            />
            <button class="bg-green-500 hover:bg-green-600 hover:scale-105 active:scale-90 text-white font-bold py-2 px-4 rounded">
              Download
            </button>
          </div>
        </div>
      );
    })
  }
</div>
